<UserControl x:Class="UWPAssetGenerator.App.Controls.DynamicScalingImageThumbnail"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UWPAssetGenerator.App.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Rectangle Name="Image" Margin="0,5,0,0" HorizontalAlignment="Center" RenderTransformOrigin="0.5,0.5" />
        <TextBlock Name="Title" FontFamily="Arial" FontSize="12"  HorizontalAlignment="Center" Margin="0,2,0,0"/>
    </Grid>
</UserControl>
